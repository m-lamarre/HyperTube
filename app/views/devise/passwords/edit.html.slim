- provide(:title, 'Change Password')

.row
  .medium-6.medium-centered.large-4.large-centered.columns
    .row.column.log-in-form
      h3.text-center
        | Change Your Password
      .gap
      = simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f|
        = f.error_notification
        = f.input :reset_password_token, as: :hidden
        = f.full_error :reset_password_token
        .form-inputs
          = f.label 'Password', class: 'inline-links'
          .inline-links
            |  
          = f.label "(6 characters minimum)", class: 'inline-links small-hint'
          = f.input :password, required: true,
                    autofocus: true, 
                    label: false
          = f.input :password_confirmation, label: 'Confirm New Password', required: true
        .gap
        .form-actions.text-center
          = f.button :submit, 'CHANGE PASSWORD', class: 'button'
        .gap
        .text-center
          = link_to 'Back', :back, class: 'links'
