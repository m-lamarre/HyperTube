footer.footer
  .row.full-width
    .small-12.medium-3.large-3.columns
      = image_tag('video.svg', alt: 'video icon')
      .gap
      p
        | Watch high quality movies!
    .small-12.medium-3.large-3.columns
      = image_tag('laptop.svg', alt: 'laptop icon')
      .gap
      p
        | Stream movies directly on your computer!
    .small-6.medium-3.large-3.columns
      = image_tag('align-justify.svg', alt: 'menu icon')
      .gap
      ul.footer-links
        - if user_signed_in?
          li
            = link_to 'Browse Movies', root_path
          li
            = link_to 'Search', movie_search_path
          li
            = link_to 'User Profile', "/users/#{current_user.id}"
          li
            = link_to 'Logout', destroy_user_session_path, method: :delete
        - else
          li
            = link_to 'Home', root_path
          li
            = link_to 'About', '/pages/about'
          li
            = link_to 'Sign Up', new_user_registration_path
          li
            = link_to 'Sign In', new_user_session_path
